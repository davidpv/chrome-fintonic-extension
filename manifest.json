{
  "manifest_version": 2,
  "name": "Subtotal",
  "description": "Show sum total elements value",
  "version": "1.0",
  "offline_enabled": true,
  "permissions": [
    "activeTab",
    "*://*.fintonic.com/*"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.fintonic.com/*"
      ],
      "js": [
        "jquery.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "page_action": {
    "default_title": "Show sum total elements value",
    "default_icon": "icon_big.png",
    "default_popup": "popup.html"
  }
}